<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Instructor #<%= @instructor.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>First name</dt>
              <dd><%= @instructor.first_name %></dd>

              <dt>Last name</dt>
              <dd><%= @instructor.last_name %></dd>

              <dt>Bio</dt>
              <dd><%= @instructor.bio %></dd>

              <dt>Paid</dt>
              <dd><%= @instructor.paid %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to instructors_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_instructor_url(@instructor.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to instructor_url(@instructor.id), :method => "delete", :data => { :confirm => "Do you really want to delete this instructor?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
